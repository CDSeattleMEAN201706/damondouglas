<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Survey Result</title>
        <style>
            .field-container {
                margin-top: 10px;
            }
            .field-container span {
                position: absolute;
                left: 300px;
                width: 150px;
            }

            .btn {
                position: absolute;
                text-decoration: none;
                color: white;
                background-color: blue;
                height: 40px;
                width: 100px;
                padding: 8px;
                border-radius: 5px;
                text-align: center;
                font-size: 20px;
                margin-top: 20px;
                right: 0;
                cursor: pointer;
            }
            .inner {
                margin-top: 10px;
            }
            h1 {
                text-decoration: underline;
            }
            
            .container {
                position: absolute;
                left: 0;
                right: 0;
                margin: 0 auto;
                width: 400px;
            }

            body {
                position:relative;

            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Submitted Info</h1>
            <div class="field-container">
                <label>Name: </label>
                <span>
                    <%= name %>
                </span>
            </div>
            <div class="field-container">
                <label>Location: </label>
                <span>
                    <%= loc %>
                </span>
            </div>
            <div class="field-container">
                <label>Favorite language: </label>
                <span>
                    <%= lang %>
                </span>
            </div>
            <div class="field-container">
                <label>Comment: </label>
                <span>
                    <%= comment %>
                </span>
            </div>
            <div class="field-container">
                <div class="btn">
                    <div class="inner">Go Back</div>
                </div>
            </div>
        </div>
        <script>
            let btn = document.querySelector('.btn')
            btn.onclick = function(e) {
                window.location.href = "/"
            };
        </script>
   </body>
</html>